{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "ts-build",
    "allowJs": true,
    "jsx":"react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude":[
    "node_modules",
    "ts-build",
    "app/angular/bower_components"
  ],
  "include": [
    "./src/**/*"
  ]
}
